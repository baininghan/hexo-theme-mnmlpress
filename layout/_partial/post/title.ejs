<% if (post.link){ %>
  <h3 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h3>
<% } else if (post.title){ %>
    <h3 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h3>
  <% } else { %>
    <h3 class="<%= class_name %>" itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>">No Title</a>
    </h3>
<% } %>