.gist
  border 0
  margin 0
  background-color color-grey
  border-radius 5px
  text-shadow 0 0 1px #fff
  overflow auto
  color #666
  .file-data
    font-size 16px !important
    font-family font-mono !important
    line-height 1.6 !important
    padding 7px 20px !important
    @media mq-mobile
      font-size 14px !important
  .gist-file
    border none !important
    font-family inherit
    margin 0 !important
    font-size 0.9em
    .gist-data
      background none
      border-bottom none !important
      pre
        font-family font-mono !important
      td
        border-bottom: none !important
      .line-numbers
        color color-meta !important
        background none
        border none
        padding 0 20px 0 0

.gist-meta
  background none
  color color-meta
  padding 0 20px 20px !important
  text-shadow 0 0 1px #fff
  font-size 16px !important
  @media mq-mobile
    font-size 14px !important
  a
    font-weight 300 !important
    &:hover
      color color-link !important

figure.highlight
  border 0
  margin 0
  background-color color-grey
  border 1px solid color-grey
  border-radius 5px
  text-shadow 0 0 1px #fff
  line-height 1.6
  overflow auto
  position relative
  font-size 0.9em
  figcaption
    color lightgrey
    padding 5px 10px
    text-shadow 0 0 1px #fff
    a
      position absolute
      right 15px

  pre
    background none
    border none
    padding 0
    margin 0

  table
    width auto !important
    margin-top 0
    border-spacing 0

  th
    font-weight normal
    border-bottom 0
    padding-bottom 0

  td
    border-bottom 0 !important
    padding 5px !important

  .gutter
    pre
      color color-meta
      text-align right
      padding-right 0

  .code
    color #666

pre
  // Theme: Solarized - Light
  // More theme here: http://softwaremaniacs.org/media/soft/highlight/test.html
  .comment
  .template_comment
  .diff .header
  .doctype
  .pi
  .lisp .string
  .javadoc
    color #93a1a1
    font-style italic

  .keyword
  .winutils
  .method
  .addition
  .css .tag
  .request
  .status
  .nginx .title
    color #859900

  .number
  .command
  .string
  .tag .value
  .phpdoc
  .tex .formula
  .regexp
  .hexcolor
    color #2aa198

  .title
  .localvars
  .chunk
  .decorator
  .built_in
  .identifier
  .vhdl
  .literal
  .id
    color #268bd2

  .attribute
  .variable
  .lisp .body
  .smalltalk .number
  .constant
  .class .title
  .parent
  .haskell .type
    color #b58900

  .preprocessor
  .preprocessor .keyword
  .shebang
  .symbol
  .symbol .string
  .diff .change
  .special
  .attr_selector
  .important
  .subst
  .cdata
  .clojure .title
    color #cb4b16

  .deletion
    color #dc322f